.loading-container
  justify-content center
  align-items center
  flex-flow column
  display flex
  height 100%
  width 100%

.loader
  animation loader 1s ease infinite
  border-right 1px solid $loading
  border-top 4px solid $loading
  border-radius 100%
  height 64px
  width 64px
  @keyframes loader
    to
      transform rotate( 360deg )

.loader-label
  animation fader 3s ease-in-out infinite
  text-transform uppercase
  font-size 11px
  color black
  margin 10px
  opacity 0
  @keyframes fader
    50%
      opacity 1
    100%
      opacity 0
